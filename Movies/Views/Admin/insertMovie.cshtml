@model Movies.ViewModels.Admin.MoviesViewModel

@{
    ViewData["Title"] = "insertMovie";
}
@section skripte{
    <link rel="stylesheet" href="~/css/admin.css">
}
<hr />
<div class="row">
    <div class="admin-panel col-md-5">
        <h2>Insert Movie</h2>

        <form asp-action="insertMovie" asp-controller="Admin" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control inp" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="content" class="control-label"></label>
                <textarea class="inp textarea" asp-for="content">
        </textarea>
                <span asp-validation-for="content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="image" class="control-label"></label>
                <input asp-for="image" class="form-control inp" />
                <span asp-validation-for="image" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Insert Movie" class="btn btn-primary signInBtn inp" />
            </div>
        </form>
        <div>
            <a asp-action="Movies">Back to List</a>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

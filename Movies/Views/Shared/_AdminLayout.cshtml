<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("skripte", required: false)

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  box-shadow mb-3 fixed-top" style="overflow-x:hidden">
            <div class="container">
                <a class="text-white" asp-area="" asp-controller="Admin" asp-action="adminPanel">AdminPanel</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                    </ul>
                </div>
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="right_wrap">
                        <div class="profile_desc"><span class="wlc">Welcome</span> @User.Claims.First(c => c.Type == "username").Value</div>
                        <ul class="profile_nav">
                            <li class="nav-item"><a class="nav-link profilee" asp-controller="User" asp-action="Profile">Profile</a></li>
                        </ul>
                    </div>
                    <div class="right_wrap">
                        <ul class="profile_nav">
                            <li class="nav-item"><a class="nav-link logout" asp-controller="User" asp-action="Logout">Logout</a></li>
                        </ul>
                    </div>}
            </div>
        </nav>
    </header>
    <div class="container" style="margin-top:100px">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
